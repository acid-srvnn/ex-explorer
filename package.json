{
	"name": "ex-explorer",
	"displayName": "extra-explorer",
	"description": "An Extra Explorer",
	"version": "1.1.0",
	"publisher": "acid-srvnn",
	"author": {
		"name": "acid-srvnn",
		"email": "safa.acid@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/acid-srvnn/ex-explorer"
	},
	"icon": "resources/icons/light/icon.png",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:ex-explorer-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ex-explorer.openfile",
				"title": "Open File"
			},
			{
				"command": "ex-explorer.opentailfile",
				"title": "Open Tail File"
			},
			{
				"command": "ex-explorer.deletefile",
				"title": "Delete"
			},
			{
				"command": "ex-explorer.deletefolder",
				"title": "Delete"
			},
			{
				"command": "ex-explorer.revealinexplorer",
				"title": "Reveal in explorer"
			},
			{
				"command": "ex-explorer.refreshConfig",
				"title": "Refresh",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			},
			{
				"command": "ex-explorer.openmysettings",
				"title": "Settings",
				"icon": {
					"light": "resources/icons/light/settings.svg",
					"dark": "resources/icons/dark/settings.svg"
				}
			},
			{
				"command": "ex-explorer.addfile",
				"title": "New File"
			},
			{
				"command": "ex-explorer.addfolder",
				"title": "New Folder"
			},
			{
				"command": "ex-explorer.renamefile",
				"title": "Rename"
			},
			{
				"command": "ex-explorer.tailfile",
				"title": "Tail this file"
			},
			{
				"command": "ex-explorer.stoptailfile",
				"title": "Stop tailing"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ex-explorer.openmysettings",
					"when": "view == ex-explorer-explorer",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.refreshConfig",
					"when": "view == ex-explorer-explorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ex-explorer.addfile",
					"when": "view == ex-explorer-explorer && viewItem =~ /ExplorerFolderItem|ExplorerRootFolderItem/",
					"group": "1_ex@1"
				},
				{
					"command": "ex-explorer.addfolder",
					"when": "view == ex-explorer-explorer && viewItem =~ /ExplorerFolderItem|ExplorerRootFolderItem/",
					"group": "1_ex@2"
				},
				{
					"command": "ex-explorer.renamefile",
					"when": "view == ex-explorer-explorer && viewItem =~ /ExplorerFileItem|ExplorerFolderItem/",
					"group": "2_ex@1"
				},
				{
					"command": "ex-explorer.deletefile",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFileItem",
					"group": "2_ex@2"
				},
				{
					"command": "ex-explorer.deletefolder",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFolderItem",
					"group": "2_ex@2"
				},
				{
					"command": "ex-explorer.tailfile",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFileItem",
					"group": "3_ex@1"
				},
				{
					"command": "ex-explorer.stoptailfile",
					"when": "view == ex-explorer-tailview && viewItem == TailFileItem",
					"group": "1_ex@1"
				},
				{
					"command": "ex-explorer.revealinexplorer",
					"when": "view == ex-explorer-explorer && viewItem =~ /ExplorerFileItem|ExplorerFolderItem|ExplorerRootFolderItem/",
					"group": "3_ex@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ex-explorer-container",
					"title": "ex-explorer",
					"icon": "resources/icons/light/log-file.svg"
				}
			]
		},
		"views": {
			"ex-explorer-container": [
				{
					"id": "ex-explorer-explorer",
					"name": "Explorer"
				},
				{
					"id": "ex-explorer-tailview",
					"name": "Tail View"
				}
			]
		},
		"configuration": {
			"title": "ex-explorer",
			"properties": {
				"ex-explorer.path": {
					"type": "array",
					"description": "Explorer Path ( Sample - D:/temp , ${WorkspaceName}/temp )",
					"items": {
						"type": "string"
					}
				},
				"ex-explorer.ignorePattern": {
					"type": "array",
					"description": "File / Folder Ignore Patterns ( Sample - .*bat , .*.jar$ , .*temp.* )",
					"items": {
						"type": "string"
					}
				},
				"ex-explorer.postOpenActions": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"filePattern": {
								"type": "string"
							},
							"toggleWordWrap": {
								"type": "boolean"
							},
							"scrollToBottom": {
								"type": "boolean"
							},
							"decorations": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"regex": {
											"type": "string"
										},
										"backgroundColor": {
											"type": "string"
										},
										"color": {
											"type": "string"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/rimraf": "2.0.2",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/rimraf": "2.0.2",
		"debounce": "1.2.1",
		"rimraf": "^3.0.2",
		"tail-file": "1.4.14"
	}
}
