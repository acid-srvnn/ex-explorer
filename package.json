{
	"name": "ex-explorer",
	"displayName": "ex-explorer",
	"description": "An Extra Explorer",
	"version": "0.0.1",
	"publisher": "acid-srvnn",
	"author": {
		"name": "acid-srvnn",
		"email": "safa.acid@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/acid-srvnn/ex-explorer"
	},
	"icon": "resources/icons/light/icon.png",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:ex-explorer-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ex-explorer.openfile",
				"title": "Open File"
			},
			{
				"command": "ex-explorer.refreshConfig",
				"title": "Refresh",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			},
			{
				"command": "ex-explorer.openmysettings",
				"title": "Settings",
				"icon": {
					"light": "resources/icons/light/settings.svg",
					"dark": "resources/icons/dark/settings.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ex-explorer.openmysettings",
					"when": "view == ex-explorer-explorer",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.refreshConfig",
					"when": "view == ex-explorer-explorer",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ex-explorer-container",
					"title": "ex-explorer",
					"icon": "resources/icons/light/log-file.svg"
				}
			]
		},
		"views": {
			"ex-explorer-container": [
				{
					"id": "ex-explorer-explorer",
					"name": "Explorer"
				}
			]
		},
		"configuration": {
			"title": "ex-explorer",
			"properties": {
				"ex-explorer.path": {
					"type": "array",
					"description": "Explorer Path ( Sample - D:/temp , ${WorkspaceName}/temp )",
					"items" : {
						"type": "string"
					}
				},
				"ex-explorer.ignorePattern": {
					"type": "array",
					"description": "File / Folder Ignore Patterns ( Sample - .*bat , .*.jar$ , .*temp.* )",
					"items": {
						"type": "string"
					}
				},
				"ex-explorer.postOpenActions": {
					"type":"array",
					"items": {
						"type":"object",
						"properties": {
							"filePattern" : {
								"type" : "string"
							},
							"toggleWordWrap" : {
								"type" : "boolean"
							},
							"scrollToBottom" : {
								"type" : "boolean"
							},
							"decorations" : {
								"type":"array",
								"items": {
									"type":"object",
									"properties": {
										"regex" : {
											"type":"string"											
										},
										"backgroundColor": {
											"type" : "string"
										},
										"color": {
											"type" : "string"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.40.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
